@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Wachtwoord vergeten?";
}

<h1 class="text-warning">@ViewData["Title"]</h1>
<h4>Geef hieronder je e-mailadres aan ons op</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input class="form-control" placeholder="Email" asp-for="Input.Email"  />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-warning">Verzenden</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
