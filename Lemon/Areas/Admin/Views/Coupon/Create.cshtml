@model Lemon.Models.Coupon

@{
    ViewData["Title"] = "Nieuwe Coupon Toevoegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="border white-background">
        <h2 class="text-warning">Nieuwe Coupon Toevoegen</h2>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="Name" />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Picture"></label>
            </div>
            <div class="col-5 ">
                <input id="projectImage" type="file" class="form-control" name="files" multiple />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="CouponType"></label>
            </div>
            <div class="col-5 ">
                <select class="form-control" asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Discount"></label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="Discount" />
            </div>
            <span class="text-danger" asp-validation-for="Discount"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="MinimumAmount"></label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="MinimumAmount" />
            </div>
            <span class="text-danger" asp-validation-for="MinimumAmount"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="IsActive"></label>
            </div>
            <div class="col-5 ">
                <input type="checkbox" class="form-control" asp-for="IsActive" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_AddOrBackButtonPartial" />
            </div>
        </div>
    </div>
</form>


@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}