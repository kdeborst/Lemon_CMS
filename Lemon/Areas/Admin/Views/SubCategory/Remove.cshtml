@model Lemon.Models.SubCategory

@{
    ViewData["Title"] = "Subcategorie Verwijderen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border white-background">
    <h2 class="text-warning">Subcategorie Verwijderen</h2>
    <br />
    <form method="post" asp-action="Remove">
        <div class="col-8">
            <input type="hidden" asp-for="Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-3">
                        <label class="custom-label" asp-for="Name"></label>
                    </div>
                    <div class="col-8 ">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label class="custom-label" asp-for="Category.Name"></label>
                    </div>
                    <div class="col-8 ">
                        <input class="form-control" asp-for="Category.Name" />
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <div class="col-8 offset-3">
                    <partial name="_RemoveOrBackButtonPartial" model="Model.Id" />
                </div>
            </div>
        </div>
    </form>
</div>
