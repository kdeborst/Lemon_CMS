@model Lemon.Models.Category
@{
    ViewData["Title"] = "Categorie Verwijderen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Remove">
    <div class="border white-background">
        <h2 class="text-warning">Categorie Verwijderen</h2>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name">Naam Categorie</label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="Name" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_RemoveOrBackButtonPartial" model="Model.Id" />
            </div>
        </div>
    </div>
</form>