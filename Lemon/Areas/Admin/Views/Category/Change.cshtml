@model Lemon.Models.Category
@{
    ViewData["Title"] = "Categorie Wijzigen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border white-background">
    <h2 class="text-warning">Categorie Wijzigen</h2>
    <br />
    <form method="post" asp-action="Change">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_ChangeOrBackButtonPartial" model="Model.Id" />
            </div>
        </div>
    </form>
</div>
