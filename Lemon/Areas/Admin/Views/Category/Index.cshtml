@model IEnumerable<Category>

@{
    ViewData["Title"] = "Overzicht Categorieën";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border white-background">
    <div class="row">
        <br />
        <div class="col-6">
            <h2 class="text-warning">Categorie Management Systeem</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />            
        </div>
    </div>
    <br />
    <div>
       @if(Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m=>m.Name)
                    </th>
                    <th></th>
                    <th>
                        Opties
                    </th>
                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m=>item.Name)
                        </td>
                        <td>
                            <partial name="_OptionButtonsPartial" model="item.Id" />
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p class="text-danger"><i class="fas fa-info"></i>&nbsp;&nbsp;Er zijn nog geen categorieën ingevoerd.. Voeg snel één toe!</p>
        }

    </div>
</div>

