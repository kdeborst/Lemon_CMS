@model Lemon.Models.Category
@{
    ViewData["Title"] = "Categorie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="get" asp-action="Details">
    <div class="border white-background">
        <h2 class="text-warning">Categorie Details</h2>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="Name" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_AlterDetailsOrBackButtonPartial" model="Model.Id"/>
            </div>
        </div>
    </div>
</form>