@model Category

@{
    ViewData["Title"] = "Nieuwe Categorie Toevoegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Create">
    <div class="border white-background">
        <h2 class="text-warning">Nieuwe Categorie Toevoegen</h2>
        <br />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-5 ">
                <input class="form-control" asp-for="Name" />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_AddOrBackButtonPartial" />
            </div>
        </div>
    </div>
</form>


@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}