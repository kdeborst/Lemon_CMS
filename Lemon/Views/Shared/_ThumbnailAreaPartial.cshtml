@model IEnumerable<MenuItem>

@if(Model.Count() > 0)
{
    <div class="col-12 ">
        <div class="row">
            <h3 class="pl-3 pt-3 text-warning font-weight-bold"><i class="fas fa-lemon"></i>&nbsp;@Model.FirstOrDefault().Category.Name</h3>
        </div>

        @foreach(var item in Model)
        {
            <div class="border border-warning rounded col-12" style="margin-bottom: 10px; margin-top: 10px; padding: 10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" style="width:100%; height: 115px; border-radius: 5px; border: 1px solid #bbb9b9;" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-5">
                            <div class="col-8">
                                <label class="font-weight-bold" style="font-size: 20px; color: #F79F1F;">@item.Name</label>
                            </div>
                            <div class="col-4 text-right" style="color: #F79F1F;">
                                <h4>€&nbsp;@item.Price</h4>
                            </div>
                        </div>
                        <div class="row col-12 justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-warning form-control" asp-route-Id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="p-3">

        </div>
    </div>
}